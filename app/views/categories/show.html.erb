<%= render "/layouts/module/navbar" %>
<!-- パンくず -->
<div class="breadcrumbs">
  <ul class="nav-bar">
    <% ["メルカリ", "カテゴリー一覧", "レディース"].each do |item| %>
      <li><%=link_to item, "#" %></li>
    <% end %>
  </ul>
</div>
<div class="category">

  <div class="category__header">
    <% ["パンツ","ジャケット/アウター","バッグ","靴", "トップス","小物","ワンピース","スーツ/フォーマル/ドレス","スカート"].each do |item| %>
      <%= link_to item, "#", class:"category__element" %>
    <% end %>
    <h3 class="category__list">レディースの商品一覧</h3>
  </div>
  <div class="category__container">
    <% (0..20).each do |i| %>
      <div class="category__item">
        <%= render "/products/index/item" %>
      </div>
    <% end %>
  </div>
</div>

